{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
